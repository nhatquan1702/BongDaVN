<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B3B3B3"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlectBXH"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:padding="5dp"
                android:text="TÊN CLB"
                android:textColor="#651FFF"
                android:background="@drawable/ti_so_bg"
                android:textAlignment="center"
                android:textSize="25sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/img_bg"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartThang"
                            android:layout_width="match_parent"
                            android:layout_height="252dp"
                            android:background="@color/white" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/chartThang"
                            android:layout_marginBottom="10dp"
                            android:text="Biểu đồ thống kê trận thắng"
                            android:textColor="#651FFF"
                            android:textAlignment="center"
                            android:textSize="16sp" />
                 </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/img_bg"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/charHoa"
                        android:layout_width="match_parent"
                        android:layout_height="252dp"
                        android:background="@color/white" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/charHoa"
                        android:text="Biểu đồ thống kê trận hòa"
                        android:textColor="#651FFF"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/img_bg"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartBai"
                        android:layout_width="match_parent"
                        android:layout_height="252dp"
                        android:background="@color/white" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/chartBai"
                        android:textColor="#651FFF"
                        android:text="Biểu đồ thống kê trận thua"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</LinearLayout>