<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_img"
    android:orientation="vertical"
    tools:context=".activity.AdminActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/vleague" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        app:cardBackgroundColor="@color/colorUser"
        app:cardCornerRadius="25dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btnTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/background_user"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:shadowColor="#00FFFFFF"
                android:text="Tài Khoản"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="0dp"
                app:elevation="0dp"
                app:iconPadding="0dp" />

            <TextView
                android:id="@+id/txtCountUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/colorPost"
        app:cardCornerRadius="25dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCountPost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btnBaiViet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/background_post"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Bài Viết"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="0dp"
                app:elevation="0dp"
                app:iconPadding="0dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>